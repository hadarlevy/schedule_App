<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_shift_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingBottom="8dp" />

    <RadioGroup
        android:id="@+id/rg_shift_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rb_possible_and_prefer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Possible and Prefer" />

        <RadioButton
            android:id="@+id/rb_possible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Possible" />

        <RadioButton
            android:id="@+id/rb_impossible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Impossible" />
    </RadioGroup>
</LinearLayout>